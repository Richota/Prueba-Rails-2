
<h1>Tasks</h1>


<br>

<div class="row">
  <% @tasks.each do |task| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h3><%= task.name %></h3>
          <small><%= time_ago_in_words(task.created_at) %> ago</small>
        <br>
          <img src= '<%= asset_path "#{task.photo}"%> '>
          <p><%= link_to 'Show', task, class: "btn btn-primary" %> </p>
        </div>

      </div>
    </div>
  <% end %>
</div>
